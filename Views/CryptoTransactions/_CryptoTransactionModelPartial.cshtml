@model CryptoTransaction

<div class="modal fade" id="addTransaction">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addTransactionLabel">Add New Crypto Transaction</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="Create">
                    <div class="form-group">
                        <label asp-for="Trader.Name"></label>
                        <input asp-for="Trader.Name" class="form-control" />
                        <span asp-validation-for="Trader.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Crypto.Name"></label>
                        <input asp-for="Crypto.Name" class="form-control" />
                        <span asp-validation-for="Crypto.Name" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>
