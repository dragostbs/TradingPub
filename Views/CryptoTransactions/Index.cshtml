@model IEnumerable<TradingPub.Models.CryptoTransaction>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">

<div class="d-flex justify-content-between">
    <h2>Cryptocurrency Transactions</h2>
    <p align="right">
        <a asp-action="Create" class="btn btn-primary">Add New</a>
    </p>
</div>

<table class="table table-borderless shadow rounded" style="width:100%">
    <thead class="text-light" style="background: #1E2830">
        <tr>
            <td style="font-size: 21px; font-weight: bold" align="center">
                @Html.DisplayNameFor(model => model.Trader)
            </td>
            <td style="font-size: 21px; font-weight:bold" align="center">
                @Html.DisplayNameFor(model => model.Crypto)
            </td>
            <td i class="bi bi-activity" style="font-size: 21px; font-weight:bold" align="center"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center" class="align-middle">
                    @Html.DisplayFor(modelItem => item.Trader.Name)
                </td>
                <td align="center" class="align-middle">
                    @Html.DisplayFor(modelItem => item.Crypto.Name)
                </td>
                <td align="center">
                    <a i class="btn btn-success btn-sm bi bi-info-lg" asp-action="Details" asp-route-id="@item.CryptoID"></a> |
                    <a i class="btn btn-danger btn-sm bi bi-x-lg" asp-action="Delete" asp-route-id="@item.CryptoID"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<input type="button" class="btn btn-info" value="Back" onclick="window.location= '@Url.Action( "Index", "Transactions")'" />
<input type="button" class="btn btn-primary" value="Next" onclick="window.location= '@Url.Action( "Index", "StocksTransactions")'" />
