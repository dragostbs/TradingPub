@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">

<div class="d-flex justify-content-between">
    <h2>All Roles</h2>
    <p align="right">
        <a asp-action="Create" class="btn btn-primary">Create a Role</a>
    </p>
</div>

<table class="table table-borderless shadow rounded" style="width:100%">
    <thead class="text-light" style="background: #1E2830">
        <tr style="font-size: 21px; font-weight: bold" align="center">           
        <td>ID</td>
        <td>Name</td>
        <td i class="bi bi-activity" style="font-size: 21px; font-weight:bold" align="center"></td>
        <tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr align="center" class="align-middle">
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td align="center">               
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <a i class="btn btn-success btn-sm bi bi bi-arrow-up-square text-light" asp-action="Update" asp-route-id="@role.Id"></a> |
                    <button type="submit" i class="btn btn-danger btn-sm bi bi-x-lg text-light">
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
