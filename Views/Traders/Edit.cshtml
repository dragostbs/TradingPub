@model TradingPub.Models.Trader

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h4>Edit Trader</h4>
</div>

<div class="container">
    <div class="table table-borderless shadow rounded text-center p-2 text-dark" style="background: #D4D8D7">
        <style type="text/css">
            .table {
                margin: 0 auto;
                width: 40%;
            }
        </style>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group p-2" style="font-size: 21px">
                    <label asp-for="Name" class="control-label p-1"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group p-2" style="font-size: 21px">
                    <label asp-for="Adress" class="control-label p-1"></label>
                    <input asp-for="Adress" class="form-control" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
