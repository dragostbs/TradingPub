@model IEnumerable<TradingPub.Models.Trader>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <h2>Traders</h2>
    <p align="right">
        <a asp-action="Create" class="btn btn-primary">Add New</a>
    </p>
</div>

<table class="table table-borderless shadow rounded" style="width:100%">
    <thead class="text-light" style="background: #1E2830">
        <tr>
            <td style="font-size: 21px; font-weight: bold" align="center">
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td style="font-size: 21px; font-weight:bold" align="center">
                @Html.DisplayNameFor(model => model.Adress)
            </td>
            <td style="font-size: 21px; font-weight:bold" align="center">
                Info
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center" class="align-middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td align="center">
                    <a class="btn btn-warning text-light btn-sm" asp-action="Edit" asp-route-id="@item.TraderID">Edit</a> |
                    <a class="btn btn-success btn-sm" asp-action="Details" asp-route-id="@item.TraderID">Details</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.TraderID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
