@{
    ViewData["Title"] = "Chat";
}
<div class="text-center">
    <h4>Chat</h4>
</div>

<div class="container">
    <div class="table table-borderless shadow rounded text-center p-0 text-dark" style="background: #D4D8D7">
        <style type="text/css">
            .table {
                margin: 0 auto;
                width: 40%;
            }
        </style>
        <div class="container p-0">
            <div class="row">&nbsp;</div>
            <div class="form-group p-0" style="font-size: 21px">
                <div class="text-center">User</div>
                <div class="text-center"><input type="text" id="userInput" /></div>
            </div>
            <div class="form-group p-0" style="font-size: 21px">
                <div class="text-center">Message</div>
                <div class="text-center"><input type="text" id="messageInput" /></div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="form-group p-0" style="font-size: 21px">
                <div class="text-center">
                    <input type="button" class="btn btn-success" id="sendButton" value="Send Message" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr color="white" />
            </div>
        </div>
        <div class="row">
            <div class="text-left">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
