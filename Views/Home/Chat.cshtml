@{
    ViewData["Title"] = "Chat";
}
<div class="text-center">
    <h4>Chat</h4>
</div>

<div class="container">
    <div class="table table-borderless shadow rounded text-center p-0 text-black" style="background: #D4D8D7">
        <style type="text/css">
            .table {
                margin: 0 auto;
                width: 50%;
            }
        </style>
        <div class="card container text-dark p-0">
            <div class="row">&nbsp;</div>
            <div class="form-group p-0" style="font-size: 21px">
                <div class="text-center">Message</div>
                <div class="d-flex justify-content-center"><input type="text" id="messageInput" class="form-control col-xl-5" placeholder="Type yor message here..." /></div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="form-group p-0" style="font-size: 21px">
                <div class="text-center">
                    <input type="button" class="btn btn-success" id="sendButton" value="Send Message" />
                </div>
            </div>
        </div>
        <div class="row p-3">
            <div class="col-12">
                 <hr color="black" />
            </div>
        </div>
        <div class="row">
            <div class="text-left">
                 <ul id="messagesList"></ul>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
